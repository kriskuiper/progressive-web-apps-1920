{
  "name": "progressive-web-apps-1920",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:kriskuiper/progressive-web-apps-1920.git",
  "author": "Kris <kriskuiper74@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p watch:* serve",
    "watch:js": "rollup -c --watch",
    "serve": "sirv dist --port 3031 --single --dev",
    "prebuild": "rimraf dist",
    "build": "run-s build:*",
    "build:data": "node ./scripts/write-data.js",
    "build:pages": "node ./scripts/build-pages.js",
		"build:static": "ncp src/static dist",
		"build:css": "postcss src/static/styles/app.css > dist/styles/app.css",
    "build:js": "rollup -c"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mkdirp": "^1.0.3",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.6.0",
    "nunjucks": "^3.2.0"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "cssnano": "^4.1.10",
    "mkdirp": "^1.0.3",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.2",
    "rollup-plugin-terser": "^5.3.0",
    "sirv-cli": "^0.4.5"
  }
}
